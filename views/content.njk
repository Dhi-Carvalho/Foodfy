        </div>
    </section>

    <div class="modalRecipe" id="modalRecipe">
        <div class="modal">
            <div class="modalContent">
                <img src="" alt="">
                <h4 class="nome"></h4>
                <p class= "autor"></p>
                <a class="closeModal">Fechar modal</a>
            </div>

        </div>
    </div>

    <script src="script.js"></script>
{% endblock %}